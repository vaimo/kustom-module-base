/** @var $block Klarna\Base\Block\Info\Klarna */
/** @var Magento\Framework\Escaper $escaper */

$_specificInfo = $block->getSpecificInformation()
?>

<?php if (!$block->isB2bOrder()): ?>
<p><img width="150"
        src="<?= /* @noEscape */ $block->getLogoUrl() ?>"
        alt="<?= $escaper->escapeUrl($block->getMethod()->getTitle()) ?>"/></p>
<?php endif; ?>

<?php if ($_specificInfo): ?>
    <table>
        <tbody>
        <?php /* @noEscape */ foreach ($_specificInfo as $_label => $_value): ?>
            <?php $implodedValue = implode("\n", $block->getValueAsArray($_value, true)); ?>
            <tr>
                <th><strong><?= $escaper->escapeUrl($_label) ?>:</strong></th>
            </tr>
            <tr>
                <td><?= /* @noEscape */ nl2br($escaper->escapeUrl($implodedValue)) ?></td>
            </tr>
        <?php endforeach; ?>
        </tbody>
    </table>
<?php endif; ?>

<?= $block->getChildHtml() ?>
